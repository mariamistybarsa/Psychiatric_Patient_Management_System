<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Psychiatrist_Management_System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1 0 auto;
            padding-top: 1rem;
            padding-bottom: 1rem;
        }

        /* Navbar bigger and darker info */
        .navbar-custom {
            background-color: #0aa1d3; /* darker Info color */
            padding: 1.2rem 1rem; /* increase height */
        }

            .navbar-custom .nav-link,
            .navbar-custom .navbar-brand {
                color: white !important;
                font-weight: 600;
            }

            .navbar-custom .btn-light {
                color: #0aa1d3;
            }

        footer {
            background-color: #0aa1d3;
            color: #fff;
            text-align: center;
            padding: 1.5rem;
            font-weight: bold;
            font-size: 1rem;
        }

            footer a {
                color: #fff;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                Psychiatric Patients Management System
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSimple" aria-controls="navbarSimple" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSimple">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                  
                </ul>
                <div class="d-flex">
                    <a asp-controller="Home" asp-action="Login" class="btn btn-outline-light me-2">Login</a>
                    <a asp-controller="Home" asp-action="Register" class="btn btn-light fw-semibold">Register</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-dark text-center py-4" style="font-weight: bold; font-size: 1.2rem; background-color: #0aa1d3;">
        <small>
            @DateTime.Now.Year <strong>Psychiatric Patients Management System</strong> by
            <a href="#" class="text-dark text-decoration-underline">Maria Misty Barsa</a>
        </small>
    </footer>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
