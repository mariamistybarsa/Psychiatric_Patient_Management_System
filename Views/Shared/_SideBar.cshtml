@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var userType = Context.Session.GetString("UsertypeId");
    var userName = HttpContextAccessor.HttpContext.Session.GetString("UserName");
}

<aside class="main-sidebar sidebar-light-info elevation-4 user-sidebar" style="min-height:100vh;">
    <div class="sidebar">
        <!-- User Panel -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/Admin/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                @if (userType == "1")
                {
                    <a href="#" class="d-block">@userName - Admin</a>
                }
                else if (userType == "2")
                {
                    <a href="#" class="d-block">@userName - Psychiatrist</a>
                }
            </div>
        </div>

        <!-- Search Form (optional, mainly for Admin) -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                @* Admin Menu *@
                @if (userType == "1")
                {
                    <li class="nav-item">
                        <a asp-area="Admins" asp-controller="PsychiatristRecord" asp-action="Record" class="nav-link">
                            <i class="nav-icon fas fa-clipboard-list"></i>
                            <p>Psychiatrist-Record</p>
                        </a>
                    </li>
                   
                    <li class="nav-item">
                        <a asp-area="Admins" asp-controller="ManageUser" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-clipboard-list"></i>
                            <p>Manage User Types</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admins" asp-controller="Designation" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-clipboard-list"></i>
                            <p>Users - Designation</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admins" asp-controller="PatientList" asp-action="Psychiatrist" class="nav-link">
                            <i class="nav-icon fas fa-user-md"></i>
                            <p>Psychiatrists</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admins" asp-controller="PatientList" asp-action="PatientInfo" class="nav-link">
                            <i class="nav-icon fas fa-procedures"></i>
                            <p>Patients</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admins" asp-controller="BookAppointmentPatients" asp-action="AppointmentPatientLists" class="nav-link">
                            <i class="nav-icon fas fa-calendar-check"></i>
                            <p>Appointmented Patient</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admins" asp-controller="PaymentHistory" asp-action="Index" class="nav-link">

                            <i class="nav-icon fas fa-calendar-check"></i>
                            <p>Payment List</p>
                        </a>
                    </li>


                    <li class="nav-item">
                        <a href="~/Admin/Notifications" class="nav-link">
                            <i class="nav-icon fas fa-bell"></i>
                            <p>Notifications</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="~/Admin/Reports" class="nav-link">
                            <i class="nav-icon fas fa-file-alt"></i>
                            <p>Reports</p>
                        </a>
                    </li>
                }

                @* Psychiatrist Menu *@
                @if (userType == "2")
                {
                    <li class="nav-item">
                        <a asp-area="Psychologist" asp-controller="PsyProfile" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-clipboard-list"></i>
                            <p>ProfileCreates</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Psychologist" asp-controller="PsychiatristSchedule" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-clipboard-list"></i>
                            <p>Schedule</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Psychologist" asp-controller="AppointmentBook" asp-action="MyBookings" class="nav-link">
                            <i class="nav-icon fas fa-clipboard-list"></i>
                            <p>Patient-Appointment</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Psychologist" asp-controller="Reviews" asp-action="Reviews" class="nav-link">
                            <i class="nav-icon fas fa-clipboard-list"></i>
                            <p>Reviews Patients</p>
                        </a>
                    </li>
                }

                <!-- Logout for both -->
                <li class="nav-item">
                    <a href="~/Home/Logout" class="nav-link">
                        <i class="nav-icon fas fa-sign-out-alt text-danger"></i>
                        <p class="text">Logout</p>
                    </a>
                </li>

            </ul>
        </nav>
    </div>
</aside>
