@model Psychiatrist_Management_System.Models.UserVM
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(to right, #4e54c8, #8f94fb);
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-box {
            background-color: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            width: 350px;
            text-align: center;
        }

        h2 {
            margin-bottom: 30px;
            color: #333;
        }

        label {
            font-weight: bold;
            color: #444;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"] {
            width: 100%;
            padding: 10px 15px;
            margin-top: 5px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            transition: border-color 0.3s;
        }

        input:focus {
            border-color: #4e54c8;
        }

        .btn {
            background-color: #4e54c8;
            color: white;
            padding: 12px;
            width: 100%;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-weight: bold;
            font-size: 16px;
        }

            .btn:hover {
                background-color: #3e44a5;
            }

        .error {
            color: red;
            margin-bottom: 10px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h2>Login</h2>

        @if (ViewData["LoginError"] != null)
        {
            <div class="error">@ViewData["LoginError"]</div>
        }

        <div id="message"></div>

        <label asp-for="Email">Email</label>
        <input id="Email" asp-for="Email" type="email" required />
        <span asp-validation-for="Email" class="error"></span>

        <label asp-for="Password">Password</label>
        <input id="Password" asp-for="Password" type="password" required />
        <span asp-validation-for="Password" class="error"></span>

        <button type="button" class="btn" id="submitBtn">Login</button>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#submitBtn').click(function (e) {
                e.preventDefault();

                var email = $('#Email').val().trim();
                var password = $('#Password').val().trim();

                if (!email || !password) {
                    alert('Please fill out all required fields.');
                    return;
                }

                var model = {
                    Email: email,
                    Password: password
                };

                $.ajax({
                    url: '/Home/Login', 
                    type: 'POST',
                    data: model,
                    success: function (response) {
                        if (response.success) {
                            alert('Login successful!');
                            window.location.href = response.redirectUrl;
                        } else {
                            alert('Error: ' + (response.message || 'Invalid email or password.'));
                        }
                    },
                    error: function (xhr) {
                        alert('Error: ' + (xhr.responseText || 'Unknown error occurred.'));
                    }
                });
            });
        });
    </script>
</body>
</html>
