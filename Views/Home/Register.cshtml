
@* Registration.cshtml *@

@model Psychiatrist_Management_System.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Register</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #4e54c8, #8f94fb);
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .register-box {
            background: #fff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
            width: 400px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }

        label {
            font-weight: bold;
            color: #444;
        }

        input[type="text"], input[type="email"], input[type="number"], input[type="password"], select {
            width: 100%;
            padding: 10px 12px;
            margin-top: 5px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 8px;
            transition: 0.3s;
        }

            input:focus, select:focus {
                border-color: #4e54c8;
                outline: none;
                box-shadow: 0 0 5px rgba(78,84,200,0.5);
            }

        button {
            width: 100%;
            padding: 12px;
            background-color: #4e54c8;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
        }

            button:hover {
                background-color: #3e44a5;
            }

        #message {
            color: green;
            font-weight: bold;
            margin-bottom: 15px;
            text-align: center;
        }

        #error {
            color: red;
            font-weight: bold;
            margin-bottom: 15px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="register-box">
        <h2>Register</h2>
        <div id="message"></div>
        <div id="error"></div>

        <form>
            <label asp-for="UserName">Username</label>
            <input asp-for="UserName" type="text" id="UserName" name="UserName" required />

            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" id="Email" name="Email" required />

            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" id="Password" name="Password" required />

            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" type="text" id="PhoneNumber" name="PhoneNumber" required />

            <label asp-for="Age">Age</label>
            <input asp-for="Age" type="number" id="Age" name="Age" min="1" required />

            <label asp-for="Address">Address</label>
            <input asp-for="Address" type="text" id="Address" name="Address" />

            <label asp-for="BloodGroup">Blood Group</label>
            <select asp-for="BloodGroup" id="BloodGroup" name="BloodGroup" required>
                <option value="">-- Select Blood Group --</option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
            </select>
            <label asp-for="UsertypeId">User Type</label>
            <select asp-for="UsertypeId" id="UsertypeId" name="UsertypeId" asp-items="ViewBag.UserTypeList" required>
                <option value="">-- Select User Type --</option>
            </select>

            @* </select> *@ 
            <label asp-for="DesignationId">Select Designation</label>
            <select asp-for="DesignationId" id="DesignationId" name="DesignationId" asp-items="ViewBag.DesignationList" required>
                <option value="">-- Select Designation --</option>
            </select>

            <button type="submit" id="submitBtn">Register</button>
        </form>
    </div>

    <script>
        $(document).ready(function () {
            $('#submitBtn').click(function (e) {
                e.preventDefault(); // prevent page reload
                debugger;
                // Trim all input/select values
                const name = $('#UserName').val().trim();
                const password = $('#Password').val().trim();
                const email = $('#Email').val().trim();
                const phone = $('#PhoneNumber').val().trim();
                const designation = Number($('#DesignationId').val().trim());
                const UserType = Number($('#UsertypeId').val().trim());
                const age =Number($('#Age').val().trim());
                const address = $('#Address').val().trim();
                const blood = $('#BloodGroup').val().trim();

                // Basic validation
                if (!name || !password || !email || !phone || !designation ||!UserType ||!age || !blood) {
                    $('#message').text('Please fill out all required fields.').css('color', 'red');
                    return;
                }

                const model = {
                    UserName: name,
                    Email: email,
                    Password: password,
                    PhoneNumber: phone,
                    Age: parseInt(age),
                    Address: address,
                    BloodGroup: blood,
                    DesignationId: parseInt(designation),
                    UsertypeId: parseInt(UserType),
                };

                $.ajax({
                    url: '/Home/Register',
                    type: 'POST',
                    data: model,       // send as JSON
                    success: function (response) {
                        if (response.success) {
                            $('#message').text('User registered successfully!').css('color', 'green');

                            // Clear form
                            $('#UserName').val('');
                            $('#Email').val('');
                            $('#Password').val('');
                            $('#PhoneNumber').val('');
                            $('#Age').val('');
                            $('#Address').val('');
                            $('#BloodGroup').val('');
                            $('#DesignationId').val('');
                           $('#UsertypeId').val('');


                            // Optionally redirect
                            window.location.href = response.redirectUrl;
                        } else {
                            $('#message').text('Error: ' + (response.message || 'Unexpected response')).css('color', 'red');
                        }
                    },
                    error: function (xhr) {
                        $('#message').text('Error: ' + (xhr.responseText || 'Unknown error')).css('color', 'red');
                    }
                });
            });
        });
    </script>
    </body>
    </html>
