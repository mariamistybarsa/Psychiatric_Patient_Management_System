@model Psychiatrist_Management_System.Models.UserVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #33d1f2); /* light info color */
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 100vh;
            padding-top: 50px; /* spacing from top */
        }

        .register-box {
            background: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
            width: 750px;
            max-height: 90vh;
            overflow-y: auto;
            margin: 20px; /* spacing around the box */
        }

        h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }

        .form-row {
            display: flex;
            gap: 30px; /* distance between columns */
        }

        .form-column {
            flex: 1;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
        }

        input, select {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 8px;
            border: 1px solid #ccc;
            transition: border-color 0.3s;
        }

            input:focus, select:focus {
                border-color: #4e54c8;
                box-shadow: 0 0 5px rgba(78,84,200,0.5);
                outline: none;
            }

        button {
            width: 100%;
            padding: 12px;
            background-color:   #33d1f2;
            ;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
        }

            button:hover {
                background-color: #3e44a5;
            }

        #message, #error {
            text-align: center;
            font-weight: bold;
            margin-bottom: 15px;
        }

        #message {
            color: green;
        }

        #error {
            color: red;
        }
    </style>
</head>
<body>
    <div class="register-box">
        <h2>Register</h2>
        <div id="message"></div>
        <div id="error"></div>

        <form>
            <div class="form-row">
                <div class="form-column">
                    <label asp-for="UserName">Username</label>
                    <input asp-for="UserName" type="text" id="UserName" required />

                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="email" id="Email" required />

                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" id="Password" required />

                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" type="text" id="PhoneNumber" required />

                    <label asp-for="Age">Age</label>
                    <input asp-for="Age" type="number" min="1" id="Age" required />
                </div>

                <div class="form-column">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" type="text" id="Address" />

                    <label asp-for="BloodGroup">Blood Group</label>
                    <select asp-for="BloodGroup" id="BloodGroup" required>
                        <option value="">-- Select Blood Group --</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>

                    <label asp-for="UsertypeId">User Type</label>
                    <select asp-for="UsertypeId" id="UsertypeId" asp-items="ViewBag.UserTypeList" required>
                        <option value="">-- Select User Type --</option>
                    </select>

                    <label asp-for="DesignationId">Designation</label>
                    <select asp-for="DesignationId" id="DesignationId" asp-items="ViewBag.DesignationList" required>
                        <option value="">-- Select Designation --</option>
                    </select>
                </div>
            </div>

            <button type="submit" id="submitBtn">Register</button>
        </form>
    </div>

    <script>
        $(document).ready(function () {
            $('#submitBtn').click(function (e) {
                e.preventDefault();

                const name = $('#UserName').val().trim();
                const password = $('#Password').val().trim();
                const email = $('#Email').val().trim();
                const phone = $('#PhoneNumber').val().trim();
                const designation = Number($('#DesignationId').val().trim());
                const UserType = Number($('#UsertypeId').val().trim());
                const age = Number($('#Age').val().trim());
                const address = $('#Address').val().trim();
                const blood = $('#BloodGroup').val().trim();

                if (!name || !password || !email || !phone || !designation || !UserType || !age || !blood) {
                    $('#message').text('Please fill out all required fields.').css('color', 'red');
                    return;
                }

                const model = {
                    UserName: name,
                    Email: email,
                    Password: password,
                    PhoneNumber: phone,
                    Age: parseInt(age),
                    Address: address,
                    BloodGroup: blood,
                    DesignationId: parseInt(designation),
                    UsertypeId: parseInt(UserType),
                };

                $.ajax({
                    url: '/Home/Register',
                    type: 'POST',
                    data: model,
                    success: function (response) {
                        if (response.success) {
                            $('#message').text('User registered successfully!').css('color', 'green');

                            $('#UserName').val('');
                            $('#Email').val('');
                            $('#Password').val('');
                            $('#PhoneNumber').val('');
                            $('#Age').val('');
                            $('#Address').val('');
                            $('#BloodGroup').val('');
                            $('#DesignationId').val('');
                            $('#UsertypeId').val('');

                            window.location.href = response.redirectUrl;
                        } else {
                            $('#message').text('Error: ' + (response.message || 'Unexpected response')).css('color', 'red');
                        }
                    },
                    error: function (xhr) {
                        $('#message').text('Error: ' + (xhr.responseText || 'Unknown error')).css('color', 'red');
                    }
                });
            });
        });
    </script>
</body>
</html>
