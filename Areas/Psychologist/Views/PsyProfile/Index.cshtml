@model Psychiatrist_Management_System.Models.PsyProfileVM

@{
    ViewData["Title"] = "Psychiatrist Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@* index.cshtml *@
<section class="section about-section gray-bg" id="about">
    <div class="container">

        <!-- Add Profile Button (Show only if no profile exists) -->
        @if (Model == null || Model.ProfileId == 0)
        {
            <a asp-area="Psychologist" asp-controller="PsyProfile" asp-action="Form" class="btn btn-success mb-3">➕ Add Profile</a>
        }

        @if (Model != null && Model.ProfileId > 0)
        {
            <div class="row align-items-center flex-row-reverse">
                <!-- Profile Info -->
                <div class="col-lg-6">
                    <div class="about-text">
                        <h3 class="dark-color">About Me</h3>
                        <h6 class="theme-color lead">@Model.Specialization</h6>
                        <p>@Model.Bio</p>

                        <div class="row about-list">
                            <div class="col-md-6">
                                <div class="media">
                                    <label>Experience</label>
                                    <p>@Model.Experience</p>
                                </div>
                                <div class="media">
                                    <label>Emergency</label>
                                    <p>@Model.EmergencyContact</p>
                                </div>
                                <div class="media">
                                    <label>Address</label>
                                    <p>@Model.Address</p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="media">
                                    <label>Username</label>
                                    <p>@Model.UserName</p>
                                </div>
                                <div class="media">
                                    <label>Email</label>
                                    <p>@Model.Email</p>
                                </div>

                                <!-- Edit & Delete buttons -->
                                <div class="mt-3">

                                    <a asp-area="Psychologist" asp-controller="PsyProfile" asp-action="Edit" asp-route-id="@Model.PsychiatristId" class="btn btn-primary">Edit</a>



                                    <form asp-area="Psychologist" asp-controller="PsyProfile" asp-action="Delete" asp-route-id="@Model.PsychiatristId" method="post" style="display:inline-block;">
                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this profile?');">🗑 Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Profile Image -->
                <div class="col-lg-6 text-center">
                    <div class="about-avatar">
                        <img src="~/images/psychiatrist/@Model.Imageurl" alt="Profile Image" class="img-fluid rounded-circle" />
                    </div>
                </div>
            </div>
            <div class="media">
                <label>VisitFee:</label>
                <p>@Model.VisitFee</p>
                <p> BDT</p>

            </div>
            <!-- Optional Counters -->
           
        }
    </div>
</section>

<style>
    body {
        color: #6F8BA4;
        margin-top: 20px;
        font-family: Arial, sans-serif;
    }

    .section {
        padding: 80px 0;
    }

    .gray-bg {
        background-color: #f5f5f5;
    }

    img {
        max-width: 100%;
        border-radius: 50%;
    }

    .about-text h3 {
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .about-text h6 {
        font-weight: 600;
        margin-bottom: 15px;
        color: #fc5356;
    }

    .about-text p {
        font-size: 16px;
        line-height: 1.5;
    }

    .about-list {
        padding-top: 15px;
    }

        .about-list .media {
            margin-bottom: 10px;
        }

        .about-list label {
            font-weight: 600;
            color: #20247b;
            width: 90px;
            display: inline-block;
        }

        .about-list p {
            display: inline-block;
            font-size: 15px;
            margin: 0;
        }

    .about-avatar img {
        max-width: 250px;
    }

    .counter {
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(31, 45, 61, 0.1);
        margin-top: 30px;
    }

        .counter .count {
            font-weight: 700;
            color: #20247b;
            margin-bottom: 5px;
        }

        .counter p {
            font-weight: 600;
            margin: 0;
        }

    .btn {
        padding: 6px 15px;
        font-size: 14px;
    }
</style>
