@model IEnumerable<Psychiatrist_Management_System.Models.PsyProfileVM>

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .profile-card {
        max-width: 900px;
        margin: 50px auto;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    .profile-img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        border: 3px solid #0d6efd;
    }

    .btn-edit {
        background-color: #0d6efd;
        color: white;
    }
</style>



<div class="container">
    <div class="profile-card bg-light">
        <div class="row">
            <!-- Profile Image -->
            <div class="col-md-4 text-center">
                <img src="~/images/cover.jpeg" alt="User Image" class="profile-img mb-3">
                <div>
                    <button class="btn btn-edit mb-2">Edit Profile</button>
                    <button class="btn btn-outline-secondary mb-2">Change Password</button>
                </div>
            </div>

            <!-- User Details -->
            <div class="col-md-8">
                <h3 class="mb-3">John Doe</h3>
                <p><strong>Email:</strong> johndoe@example.com</p>
                <p><strong>Phone:</strong> +123 456 7890</p>
                <p><strong>Address:</strong> 123 Main Street, City, Country</p>
                <p><strong>Role:</strong> User</p>

                <hr>
                <h5>About Me</h5>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent sit amet dolor eget ipsum fermentum tincidunt.</p>
            </div>
        </div>
    </div>
</div>









<style>
    .btn-save {
        background-color: darkcyan;
        color: white;
        padding: 10px 20px;
        font-size: 15px;
        font-weight: bold;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: 0.3s ease;
        box-shadow: 0 3px 6px rgba(0,0,0,0.2);
    }

        .btn-save:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

        .btn-save:active {
            background-color: #1e7e34;
            transform: scale(0.95);
        }

    table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    thead {
        background: darkcyan;
        color: white;
        text-align: left;
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
    }

    tbody tr:nth-child(even) {
        background: #f9f9f9;
    }

    tbody tr:hover {
        background: #f1f1f1;
        cursor: pointer;
    }

    th {
        font-size: 16px;
        text-transform: uppercase;
    }

    td {
        font-size: 15px;
    }

    .banner {
        background-color: darkcyan;
        color: white;
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        padding: 20px 0;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.2);
        margin-bottom: 20px;
    }
</style>

<div class="banner">
    Psychiatrist Profiles
</div>

<a asp-area="Psychologist" asp-controller="PsyProfile" asp-action="Form" class="btn btn-info">➕ Add</a>

<table>
    <thead>
        <tr>
            <th>Bio</th>
            <th>Specialization</th>
            <th>Experience</th>
            <th>Emergency Contact</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var profile in Model)
        {
            <tr>
                <td>@profile.Bio</td>
                <td>@profile.Specialization</td>
                <td>@profile.Experience</td>
                <td>@profile.EmergencyContact</td>
                <td>
                    @if (!string.IsNullOrEmpty(profile.Imageurl))
                    {
                        <img src="@profile.Imageurl" alt="Profile Image" width="50" height="50" style="border-radius:50%;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <!-- Edit button -->
                    <a asp-area="Psychologist"
                       asp-controller="PsyProfile"
                       asp-action="Form"
                       asp-route-id="@profile.ProfileId"
                       class="btn btn-info">
                        ✏️
                    </a>

                    <!-- Delete button -->
                    <form asp-area="Psychologist" asp-controller="PsyProfile" asp-action="Delete" asp-route-id="@profile.ProfileId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this profile?');">🗑</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
