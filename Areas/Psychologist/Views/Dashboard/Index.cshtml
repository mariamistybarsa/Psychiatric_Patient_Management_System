@* Index.cshtml *@
@{
    ViewData["Title"] = "Psychiatrist Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var summary = ViewBag.Summary;
    var patients = ViewBag.Patients as List<PsychiatristDashboardVM>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f6fa;
            font-family: 'Segoe UI', sans-serif;
        }

        .dashboard-header {
            text-align: center;
            margin: 20px 0;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 3px 6px rgba(0,0,0,0.1);
        }

        .reviews {
            max-height: 200px;
            overflow-y: auto;
        }

        .badge-approved {
            background-color: #007bff;
        }

        .badge-paid {
            background-color: #28a745;
        }

        .badge-completed {
            background-color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="dashboard-header">
            <h1>@ViewData["Title"]</h1>
        </div>

        <!-- Top Summary Cards -->
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card p-3 text-center">
                    <h4>Approved Patients</h4>
                    <h2 class="text-primary">@summary?.ApprovedPatients</h2>
                    <span class="badge badge-approved">Approved</span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 text-center">
                    <h4>Paid Patients</h4>
                    <h2 class="text-success">@summary?.PaidPatients</h2>
                    <span class="badge badge-paid">Paid</span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3 text-center">
                    <h4>Completed Patients</h4>
                    <h2 class="text-secondary">@summary?.CompletedPatients</h2>
                    <span class="badge badge-completed">Completed</span>
                </div>
            </div>
        </div>

        <!-- Bottom Section: Patients Table + Reviews -->
        <div class="row mt-5 g-4">
            <!-- Bottom Section: Patients Table + Reviews -->
            <div class="row mt-5 g-4">
                <!-- Patients Table -->
                <div class="col-md-8">
                    <div class="card p-3">
                        <h4>Patients List</h4>
                        <table class="table table-striped mt-3">
                            <thead>
                                <tr>
                                    <th>Patient Name</th>
                                    <th>Status</th>
                                    <th>Payment</th>
                                    <th>Completed Date</th>
                                </tr>
                            </thead>
                      
                            <tbody>
                            <tbody>
                                @if (patients != null)
                                {
                                    foreach (var patient in patients)
                                    {
                                        // Only show Approved, Paid, Completed, Reject
                                        if (patient.ApprovalStatus == "Approved"
                                        || patient.ApprovalStatus == "Completed"
                                        || patient.ApprovalStatus == "Reject"
                                        || patient.PaymentStatus == "Paid")
                                        {
                                            <tr>
                                                <td>@patient.PatientName</td>
                                                <td>
                                                    <span class="badge @(patient.ApprovalStatus == "Approved" ? "badge-approved" :
                                                                                                       patient.ApprovalStatus == "Completed" ? "badge-completed" :
                                                                                                       patient.ApprovalStatus == "Reject" ? "bg-danger" : "badge-secondary")">
                                            @patient.ApprovalStatus
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(patient.PaymentStatus == "Paid" ? "badge-paid" : "badge-completed")">
                                            @patient.PaymentStatus
                                        </span>
                                    </td>
                                    <td>@patient.CreatedAt?.ToString("yyyy-MM-dd")</td>
                                </tr>
                                                                }
                                    }
                                }
                            </tbody>

                            </tbody>

                          
                        </table>
                    </div>
                </div>

                <!-- Reviews Section -->
                <div class="col-md-4">
                    <div class="card p-3">
                        <h4>Patient Reviews</h4>
                        <div class="reviews mt-2">
                            @if (patients != null)
                            {
                                foreach (var patient in patients)
                                {
                                    if (!string.IsNullOrEmpty(patient.Comment))
                                    {
                                        <p>
                                            <strong>@patient.PatientName:</strong> @patient.Comment
                                            @for (int i = 0; i < (patient.Rate ?? 0); i++)
                                            {
                                                <span>⭐</span>
                                            }
                                        </p>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>


    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
