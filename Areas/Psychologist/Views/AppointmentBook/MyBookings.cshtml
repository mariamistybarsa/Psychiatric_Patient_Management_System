@model IEnumerable<Psychiatrist_Management_System.Models.BookingHistoryVM>

<center class="mb-4">
    <h1 style="font-size: 48px; font-weight: bold;">My Appointed Patients</h1>
</center>

<div class="table-responsive shadow-sm rounded">
    <table class="table table-striped table-hover align-middle">
        <thead style="background-color: #4a90e2; color: #fff;">
            <tr>
                <th>Booking ID</th>
                <th>Patient</th>
                <th>Email</th>
                <th>Address</th>
                <th>Designation</th>
                <th>Phone</th>
                <th>Age</th>
                <th>Blood Group</th>
                <th>Date</th>
                <th>Time</th>
                <th>Day</th>
                <th>Notes</th>
                <th>Approval</th>
                <th>Payment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                var filteredBookings = Model
                .Where(b => (b.ApprovalStatus == "Approved" && b.PaymentStatus == "Paid")
                || b.ApprovalStatus == "Completed");
            }

            @foreach (var item in filteredBookings)
            {
                <tr>
                    <td>@item.BookingId</td>
                    <td>@item.PatientName</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.DesignationName</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Age</td>
                    <td>@item.BloodGroup</td>
                    <td>@item.AppointmentDate.ToShortDateString()</td>
                    <td>@item.AppointmentTime</td>
                    <td>@item.AppointmentDay</td>
                    <td>@item.Notes</td>
                    <td>
                        @if (item.ApprovalStatus == "Completed")
                        {
                            <span class="badge bg-secondary">Completed</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@item.ApprovalStatus</span>
                        }
                    </td>
                    <td>
                        <span class="badge bg-success">@item.PaymentStatus</span>
                    </td>
                    <td>
                        @if (item.ApprovalStatus != "Completed")
                        {
                            <a asp-action="MarkCompleted" asp-route-id="@item.BookingId" class="btn btn-sm mb-1" style="width:120px; height:40px; background-color:#9bc400; color:#fff;">
                                <i class="fa fa-check me-1"></i> Complete
                            </a>
                            <a asp-action="RejectBooking" asp-route-id="@item.BookingId" class="btn btn-sm mb-1" style="width:120px; height:40px; background-color:#f2d53c; color:#000;">
                                <i class="fa fa-times me-1"></i> Reject
                            </a>
                        }
                        <a asp-controller="AppointmentBook" asp-action="Prescription" asp-route-bookingId="@item.BookingId" class="btn btn-sm mb-1" style="width:120px; height:40px; background-color:#4a90e2; color:#fff;">
                            <i class="fa fa-file-medical me-1"></i> Prescription
                        </a>
                    </td>
                </tr>

                <!-- Send Message Row (Full-width below booking) -->
                <tr class="table-secondary">
                    <td colspan="15" class="text-center py-2">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#messageModal-@item.BookingId">
                            Send Message
                        </button>
                    </td>
                </tr>

                <!-- Message Modal -->
                <div class="modal fade" id="messageModal-@item.BookingId" tabindex="-1" aria-labelledby="messageModalLabel-@item.BookingId" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="messageModalLabel-@item.BookingId">Send Message to @item.PatientName</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form asp-action="SendMessage" method="post">
                                <div class="modal-body">
                                    <input type="hidden" name="BookingId" value="@item.BookingId" />

                                    <div class="mb-3">
                                        <label class="form-label">Google Meet Link</label>
                                        <input type="url" class="form-control" name="Message"
                                               placeholder="https://meet.google.com/abc-defg-hij"
                                               pattern="https://meet\.google\.com/[a-z]{3}-[a-z]{4}-[a-z]{3}"
                                               required
                                               title="Only valid Google Meet link allowed (e.g., https://meet.google.com/abc-defg-hij)">

                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Select Appointment Time</label>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="AppointmentTime" value="@item.AppointmentTime" id="timeCheck-@item.BookingId" required>
                                            <label class="form-check-label" for="timeCheck-@item.BookingId">
                                                @item.AppointmentTime
                                            </label>
                                        </div>
                                    </div>

                                    <div class="text-center py-3">
                                        <button type="submit" class="btn btn-primary" style="width:180px; height:40px;">
                                            Send Message
                                        </button>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
