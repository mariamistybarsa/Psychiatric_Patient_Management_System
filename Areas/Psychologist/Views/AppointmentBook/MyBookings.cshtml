@model IEnumerable<Psychiatrist_Management_System.Models.BookingHistoryVM>

<center class="mb-4">
    <h1 style="font-size: 48px; font-weight: bold;">My Appointed Patients</h1>
</center>


<div class="table-responsive shadow-sm rounded">
    <table class="table table-striped table-hover align-middle">
        <thead style="background-color: #4a90e2; color: #fff;">
            <tr>
                <th>Booking ID</th>
                <th>Patient</th>
                <th>Email</th>
                <th>Address</th>
                <th>Designation</th>
                <th>Phone</th>
                <th>Age</th>
                <th>Blood Group</th>
                <th>Date</th>
                <th>Time</th>
                <th>Day</th>
                <th>Notes</th>
                <th>Approval</th>
                <th>Payment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.ApprovalStatus == "Approved" && item.PaymentStatus == "Paid")
                {
                    <!-- Booking Row -->
                    <tr>
                        <td>@item.BookingId</td>
                        <td>@item.PatientName</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td>@item.DesignationName</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Age</td>
                        <td>@item.BloodGroup</td>
                        <td>@item.AppointmentDate.ToShortDateString()</td>
                        <td>@item.AppointmentTime</td>
                        <td>@item.AppointmentDay</td>
                        <td>@item.Notes</td>
                        <td><span class="badge bg-success">@item.ApprovalStatus</span></td>
                        <td><span class="badge bg-success">@item.PaymentStatus</span></td>
                        <td>
                            <!-- Complete Button: Grassy Green -->
                            <a asp-action="MarkCompleted" asp-route-id="@item.BookingId"
                               class="btn btn-sm d-inline-flex align-items-center justify-content-center mb-1"
                               style="width: 120px; height: 40px; font-size: 14px; padding: 0 8px; border-radius: 5px; background-color: #9bc400; color: #fff;">
                                <i class="fa fa-check me-1"></i> Complete
                            </a>

                            <a asp-action="RejectBooking" asp-route-id="@item.BookingId"
                               class="btn btn-sm d-inline-flex align-items-center justify-content-center mb-1"
                               style="width: 120px; height: 40px; font-size: 14px; padding: 0 8px; border-radius: 5px; background-color: #f2d53c; color: #000;">
                                <i class="fa fa-times me-1"></i> Reject
                            </a>
                            <a asp-controller="AppointmentBook" asp-action="Prescription" 
                               class="btn btn-sm d-inline-flex align-items-center justify-content-center mb-1"
                               style="width: 120px; height: 40px; font-size: 14px; padding: 0 8px; border-radius: 5px; background-color: #4a90e2; color: #fff;">
                                <i class="fa fa-file-medical me-1"></i> Prescription
                            </a>
                           



                    </tr>
                  

            


                    <!-- Separate Message Row -->
                    <tr class="table-secondary">
                        <td colspan="15" class="text-center py-2">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#messageModal-@item.BookingId">
                                Send Message
                            </button>
                        </td>
                    </tr>

                    <!-- Bootstrap Modal for sending message -->
                    <div class="modal fade" id="messageModal-@item.BookingId" tabindex="-1" aria-labelledby="messageModalLabel-@item.BookingId" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="messageModalLabel-@item.BookingId">Send Message to @item.PatientName</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form asp-action="SendMessage" method="post">
                                    <div class="modal-body">
                                        <input type="hidden" name="BookingId" value="@item.BookingId" />
                                        <div class="mb-3">
                                            <label for="message-@item.BookingId" class="form-label">Message</label>
                                            <textarea class="form-control" id="message-@item.BookingId" name="Message" rows="4" required></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Send</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
        </tbody>
    </table>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
