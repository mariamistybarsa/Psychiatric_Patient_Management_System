@model List<Psychiatrist_Management_System.Models.ReviewVm>

<div class="container mt-4">
    <h2 class="text-center text-white bg-info p-2 rounded">Patient Reviews</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped mt-3">
            <thead class="table-info">
                <tr>
                    <th>Sr.</th>
                    <th>Patient Name</th>
                    <th>Rating</th>
                    <th>Comment</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int serial = 1;
                }
                @foreach (var review in Model)
                {
                    <tr>
                        <td>@serial</td>
                        <td>@review.PatientName</td>
                        <td>
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= review.Rate)
                                {
                                    <span class="fa fa-star checked"></span>
                                }
                                else
                                {
                                    <span class="fa fa-star"></span>
                                }
                            }
                        </td>
                        <td>@review.Comment</td>
                    </tr>
                    serial++;
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-danger mt-3">No reviews found.</p>
    }
</div>

<!-- Font Awesome for star icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .fa-star {
        color: #ccc; /* default grey */
        margin: 0 1px;
    }

    .fa-star.checked {
        color: gold; /* filled stars are yellow */
    }
</style>
