@model IEnumerable<BookingHistoryVM>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- DataTables CSS CDN -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css">

<div class="container mt-4">
    <h2>My Bookings & Psychiatrists</h2>

    <table id="bookingTable" class="table table-bordered table-striped">
        <thead class="table-info">
            <tr>
                <th>Booking ID</th>
                <th>Appointment Day</th>
                <th>Booking Serial</th>
                <th>Psychiatrist Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BookingId</td>
                    <td>@item.AppointmentDay</td>
                    <td>@item.BookingSerial</td>
                    <td>@item.PsychiatristName</td>
                    <td>
                        <a class="btn btn-primary btn-sm"
                           asp-controller="Prescription"
                           asp-action="ViewPrescription"
                           asp-route-bookingId="@item.BookingId">
                            View Prescription
                        </a>

                        <a class="btn btn-success btn-sm"
                           asp-area="User"
                           asp-controller="Review"
                           asp-action="ReviewtoPsychiatrist"
                           asp-route-bookingId="@item.BookingId">
                            Review
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $('#bookingTable').DataTable({
            paging: true,      // Pagination
            searching: true,   // Search box
            ordering: true,    // Column sorting
            lengthChange: true // Change number of rows per page
        });
    });
</script>
