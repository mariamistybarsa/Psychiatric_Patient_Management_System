@model IEnumerable<BookingHistoryVM>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<h2>My Bookings & Psychiatrists</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Booking ID</th>
            <th>Appointment Day</th>
            <th>Booking Serial</th>
            <th>Psychiatrist Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookingId</td>
                <td>@item.AppointmentDay</td>
                <td>@item.BookingSerial</td>
                <td>@item.PsychiatristName</td>
                <td>
                    <a class="btn btn-primary btn-sm"
                       asp-controller="Prescription"
                       asp-action="ViewPrescription"
                       asp-route-bookingId="@item.BookingId">
                        View Prescription
                    </a>

                    <!-- Review Button for each psychiatrist -->
                    <a class="btn btn-success btn-sm"
                       asp-area="User"
                       asp-controller="Review"
                       asp-action="ReviewtoPsychiatrist"
                       asp-route-bookingId="@item.BookingId">
                        Review
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
