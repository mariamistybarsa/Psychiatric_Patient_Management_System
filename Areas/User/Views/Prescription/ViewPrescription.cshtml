

@model IEnumerable<PrescriptionVM>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        padding: 20px;
        font-family: Arial, sans-serif;
    }

    h3 {
        margin-bottom: 20px;
    }

    .info p {
        margin: 0 0 5px 0;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

        table th, table td {
            text-align: center;
            vertical-align: middle;
            border: none; /* hide borders */
            padding: 8px;
        }

    #downloadBtn {
        margin-top: 20px;
    }

    .written-by {
        margin-top: 25px;
        text-align: right;
        font-style: italic;
    }
</style>

<div id="prescriptionContent">
    <h3 class="text-center">Doctor’s Prescription Note</h3>
    @if (Model.Any())
    {
        var first = Model.First();
        <div class="info">
            <p><strong>Patient Name:</strong> @first.PatientName</p>
            <p><strong>Psychiatrist Name:</strong> @first.PsychiatristName</p>
            @* <p><strong>Appointment Day:</strong> @first.AppointmentDay.ToString("yyyy-MM-dd")</p> *@
            <p><strong>Advice:</strong> @first.Advice</p>
        </div>

        <table class="table mt-3">
            <thead class="table-light">
                <tr>
                    <th>Medicine</th>
                    <th>Dose</th>
                    <th>Duration</th>
                    <th>Frequency</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var med in Model)
                {
                    <tr>
                        <td>@med.Medicine_Notes</td>
                        <td>@med.MedicineDose</td>
                        <td>@med.MedicineDuration</td>
                        <td>@med.Frequency</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="written-by">
            Written by: @first.PsychiatristName
        </div>
    }
    else
    {
        <p class="text-center text-danger">No prescription found for this booking.</p>
    }
</div>

<button id="downloadBtn" class="btn btn-primary">Download PDF</button>

<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
<script>
    document.getElementById("downloadBtn").addEventListener("click", function () {
        var element = document.getElementById("prescriptionContent");
        var opt = {
            margin:       0.5,
            filename:     'Prescription.pdf',
            image:        { type: 'jpeg', quality: 0.98 },
            html2canvas:  { scale: 2 },
            jsPDF:        { unit: 'in', format: 'letter', orientation: 'portrait' }
        };
        html2pdf().set(opt).from(element).save();
    });
</script>
