@model List<Psychiatrist_Management_System.Models.BookingHistoryVM>
@using Psychiatrist_Management_System.Models

<h3 class="mb-4">Booking History</h3>
<form method="get" asp-controller="PatientList" asp-action="Search" class="d-flex mb-3">
    <input type="text" name="UserName" class="form-control me-2" placeholder="Search by ID, Name, or Email" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info text-center">
        @TempData["Message"]
    </div>
}

@if (Model != null && Model.Count > 0)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-3">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        Booking History: @item.AppointmentDay
                    </div>
                    <div class="card-body">
                        <p><strong>Psychiatrist:</strong> @item.PsychiatristName</p>
                        <p><strong>Patient:</strong> @item.PatientName</p>
                        <p><strong>Date:</strong> @item.AppointmentDate.ToString("dd-MM-yyyy")</p>
                        <p><strong>Time:</strong> @item.AppointmentTime</p>
                        <p><strong>Day:</strong> @item.AppointmentDay</p>
                        <p><strong>Notes:</strong> @item.Notes</p>
                        <p>
                            <strong>Approval Status:</strong>
                            <span class="badge @(item.ApprovalStatus == "Pending" ? "bg-warning text-dark" :
                                                                                                      item.ApprovalStatus == "Rejected" ? "bg-danger" :
                                                                                                      "bg-success")">
                        @item.ApprovalStatus
                    </span>
                </p>
                <p>
                    <strong>Payment Status:</strong>
                    <span class="badge @(item.PaymentStatus == "Paid" ? "bg-success" : "bg-secondary")">
                        @item.PaymentStatus
                    </span>
                    @if (item.PaymentStatus == "NotPaid")
                            {
                                <span class="text-danger ms-2">Please pay within 24 hours</span>
                            }
                        </p>

                        @* Buttons based on status *@
                        @if (item.ApprovalStatus == "Pending" || item.ApprovalStatus == "Rejected")
                        {
                            <form asp-action="CancelBooking" method="post" onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="bookingId" value="@item.BookingId" />
                                <button type="submit" class="btn btn-danger btn-sm">Cancel Booking</button>
                            </form>
                        }
                        else if (item.ApprovalStatus == "Approved" && item.PaymentStatus == "NotPaid")
                        {
                            <!-- Pay Now button triggers the modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#paymentModal-@item.BookingId">
                                Pay Now
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="paymentModal-@item.BookingId" tabindex="-1" aria-labelledby="paymentModalLabel-@item.BookingId" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header bg-primary text-white">
                                            <h5 class="modal-title" id="paymentModalLabel-@item.BookingId">Payment</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>

                                        <div class="modal-body">
                                            <!-- Payment Options -->
                                            <div class="mb-3">
                                                <label class="form-label">Choose Payment Method:</label>
                                                <div class="d-flex gap-2 flex-wrap">
                                                    <button type="button" class="btn btn-outline-primary" onclick="showForm('bkash', @item.BookingId)">Bkash</button>
                                                    <button type="button" class="btn btn-outline-success" onclick="showForm('nagad', @item.BookingId)">Nagad</button>
                                                    <button type="button" class="btn btn-outline-warning" onclick="showForm('rocket', @item.BookingId)">Rocket</button>
                                                    <button type="button" class="btn btn-outline-info" onclick="showForm('card', @item.BookingId)">Card</button>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Payment Amount:</label>
                                                <div class="d-flex gap-2 flex-wrap">
                                                 <span>@item.VisitFee</span>
                                                </div>
                                            </div>

                                            <!-- Forms (hidden by default) -->
                                            <div id="bkash-@item.BookingId" class="payment-form d-none">
                                                <h6 class="text-primary">Bkash Payment</h6>
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="BookingId" value="@item.BookingId" />
                                                    <input type="hidden" name="Method" value="Bkash" />

                                                    <div class="mb-3">
                                                        <label class="form-label">Account Number</label>
                                                        <input type="text" name="AccountNumber" class="form-control" placeholder="Enter Account Number" autocomplete="off" />
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">PIN</label>
                                                        <input type="password" name="Pin" class="form-control" placeholder="Enter PIN" autocomplete="new-password" />
                                                    </div>
                                                    <button type="button" class="btn btn-primary pay-now-btn">Pay Now</button>
                                                
                                            </div>

                                            <div id="nagad-@item.BookingId" class="payment-form d-none">
                                                <h6 class="text-success">Nagad Payment</h6>
                                               
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="BookingId" value="@item.BookingId" />
                                                    <input type="hidden" name="Method" value="Nagad" />

                                                    <div class="mb-3">
                                                        <label class="form-label">Account Number</label>
                                                        <input type="text" name="AccountNumber" class="form-control" placeholder="Enter Account Number" autocomplete="off" />
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">PIN</label>
                                                        <input type="password" name="Pin" class="form-control" placeholder="Enter PIN" autocomplete="new-password" />
                                                    </div>
                                                    <button type="button" class="btn btn-success pay-now-btn">Pay Now</button>
                                              
                                            </div>


                                            <div id="rocket-@item.BookingId" class="payment-form d-none">
                                                <h6 class="text-warning">Rocket Payment</h6>
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="BookingId" value="@item.BookingId" />
                                                    <input type="hidden" name="Method" value="Rocket" />

                                                    <div class="mb-3">
                                                        <label class="form-label">Account Number</label>
                                                        <input type="text" name="AccountNumber" class="form-control" placeholder="Enter Account Number" autocomplete="off" />
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">PIN</label>
                                                        <input type="password" name="Pin" class="form-control" placeholder="Enter PIN" autocomplete="new-password" />
                                                    </div>
                                                    <button type="button" class="btn btn-warning pay-now-btn">Pay Now</button>
                                            
                                            </div>

                                            <div id="card-@item.BookingId" class="payment-form d-none">
                                                <h6 class="text-info">Card Payment</h6>
                                              
                                                    <div class="mb-3">
                                                        <label class="form-label">Card Number</label>
                                                        <input type="text" class="form-control" placeholder="1234 5678 9012 3456">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Expiry Date</label>
                                                        <input type="month" class="form-control">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">CVV</label>
                                                        <input type="text" class="form-control" placeholder="123">
                                                    </div>
                                                    <button type="button" class="btn btn-info pay-now-btn">Pay Now</button>
                                               
                                            </div>
                                        </div>

                                        <div class="modal-footer">
                                            <small class="text-danger me-auto">Please make the payment within 24 hours</small>
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning text-center">
        No booking history found.
    </div>
}

<!-- Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
    $(document).ready(function() {

        // Show selected payment form
        window.showForm = function(type, bookingId) {
            var $modal = $(`#paymentModal-${bookingId}`);
            $modal.find('.payment-form').addClass('d-none'); // hide all
            $(`#${type}-${bookingId}`).removeClass('d-none'); // show selected
        };

        // Reset modal when closed
        $('.modal').on('hidden.bs.modal', function () {
            $(this).find('.payment-form').addClass('d-none'); // hide all forms
            $(this).find('input[type="text"], input[type="password"], input[type="month"], input[type="hidden"]').val(''); // clear inputs
        });

        // Delegate click for dynamically shown buttons
        $(document).on('click', '.pay-now-btn', function() {
            var $form = $(this).closest('.payment-form'); // get correct div
            var bookingId = $form.find('input[name="BookingId"]').val();
            var method = $form.find('input[name="Method"]').val();

            if (!bookingId || !method) {
                alert('Invalid payment data!');
                return;
            }

            // Collect all input values
            var data = { BookingId: bookingId, PaymentMethod: method };
            $form.find('input').each(function() {
                var name = $(this).attr('name');
                var value = $(this).val();
                data[name] = value;
            });

            // Get the correct anti-forgery token for this form
            var token = $form.find('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: '@Url.Action("ProcessPayment", "BookAppointment")',
                type: 'POST',
                contentType: 'application/json',
                headers: { 'RequestVerificationToken': token },
                data: JSON.stringify(data),
                success: function(response) {
                    if (response.success) {
                        alert('Payment Successful!');
                        location.reload();
                    } else {
                        alert('Payment Failed: ' + response.message);
                    }
                },
                error: function(err) {
                    console.error(err);
                    alert('Something went wrong. Please try again.');
                }
            });
        });

    });
</script>
