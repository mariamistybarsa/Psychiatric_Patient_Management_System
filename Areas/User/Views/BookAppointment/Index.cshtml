@model List<Psychiatrist_Management_System.Models.BookingHistoryVM>
@using Psychiatrist_Management_System.Models

<h3 class="mb-4">Booking History</h3>

<form method="get" asp-controller="PatientList" asp-action="Search" class="d-flex mb-3">
    <input type="text" name="UserName" class="form-control me-2" placeholder="Search by ID, Name, or Email" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info text-center">@TempData["Message"]</div>
}

@if (Model != null && Model.Count > 0)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-3">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        Booking ID: @item.BookingId — @item.AppointmentDay
                    </div>
                    <div class="card-body">
                        <p><strong>Psychiatrist:</strong> @item.PsychiatristName</p>
                        <p><strong>Patient:</strong> @item.PatientName</p>
                        <p><strong>Date:</strong> @item.AppointmentDate.ToString("dd-MM-yyyy")</p>
                        <p><strong>Time:</strong> @item.AppointmentTime</p>
                        <p><strong>Notes:</strong> @item.Notes</p>

                        <p>
                            <strong>Approval Status:</strong>
                            <span class="badge @(item.ApprovalStatus == "Pending" ? "bg-warning text-dark" :
                                                                                  item.ApprovalStatus == "Rejected" ? "bg-danger" :
                                                                                  item.ApprovalStatus == "Cancel" ? "bg-secondary" :
                                                                                  "bg-success")">
                        @item.ApprovalStatus
                    </span>
                </p>

                @if (item.ApprovalStatus != "Cancel")
                        {
                            <p>
                                <strong>Payment Status:</strong>
                                <span class="badge payment-status @(item.PaymentStatus == "Paid" ? "bg-success" : "bg-secondary")">
                                    @item.PaymentStatus
                                </span>
                            </p>
                        }

                        @* ---- Cancel Booking Logic ---- *@
                        @* ---- Cancel Booking Logic ---- *@
                        @if (item.ApprovalStatus != "Cancel")
                        {
                            // ✅ Case 1: Before payment (NotPaid)
                            if (item.PaymentStatus == "NotPaid")
                            {
                                <form asp-action="CancelBooking" method="post"
                                      onsubmit="return confirm('Cancel this booking? It will be deleted permanently.');">
                                    <input type="hidden" name="bookingId" value="@item.BookingId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Cancel Booking</button>
                                </form>
                            }
                            // ✅ Case 2: After payment + Approved (Refund rules apply)
                            else if (item.PaymentStatus == "Paid" && (item.ApprovalStatus == "Pending" || item.ApprovalStatus == "Approved"))
                            {
                                if (item.HoursDifference >= 0 && item.HoursDifference <= 24)
                                {
                                    <form asp-action="CancelBookingfor24hours" method="post"
                                          onsubmit="return confirm('Cancel this booking? You will get 15% refund.');">
                                        <input type="hidden" name="bookingId" value="@item.BookingId" />
                                        <button type="submit" class="btn btn-warning btn-sm">Cancel (15% Refund)</button>
                                        <small class="text-muted ms-2">Within 24 hours → 15% refund</small>
                                        <small class="text-muted ms-2">Hours: @item.HoursDifference</small>
                                    </form>
                                }
                                else
                                {
                                    @* ❌ After 24 hours → hide cancel button completely *@
                                }
                            }
                        }


                        @if (item.PaymentStatus == "Paid")
                        {
                            <a asp-controller="BookAppointment" asp-action="InvoicePayment" asp-route-bookingId="@item.BookingId"
                               class="btn btn-info btn-sm mt-2">
                                View Invoice
                            </a>
                        }

                        @* ---- Payment Button & Modal ---- *@
                        @if (item.ApprovalStatus == "Pending" && item.PaymentStatus == "NotPaid")
                        {
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#paymentModal-@item.BookingId">
                                Pay Now
                            </button>

                            <div class="modal fade" id="paymentModal-@item.BookingId" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header bg-primary text-white">
                                            <h5 class="modal-title">Payment</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">

                                            <!-- Payment Method -->
                                            <div class="mb-3">
                                                <label class="form-label">Choose Payment Method:</label>
                                                <div class="d-flex gap-2 flex-wrap">
                                                    <button type="button" class="btn btn-outline-primary" onclick="showForm('bkash', @item.BookingId)">Bkash</button>
                                                    <button type="button" class="btn btn-outline-success" onclick="showForm('nagad', @item.BookingId)">Nagad</button>
                                                    <button type="button" class="btn btn-outline-warning" onclick="showForm('rocket', @item.BookingId)">Rocket</button>
                                                    @* <button type="button" class="btn btn-outline-info" onclick="showForm('card', @item.BookingId)">Card</button> *@
                                                </div>
                                            </div>

                                            <!-- Payment Type -->
                                            <div class="mb-3">
                                                <label class="form-label">Select Payment Type:</label>
                                                <div class="d-flex gap-3 flex-wrap">
                                                    <div class="form-check">
                                                        <input class="form-check-input fee-checkbox" type="checkbox"
                                                               data-amount="@item.VisitFee" value="Visit" />
                                                        <label class="form-check-label">Visiting Fee (@item.VisitFee BDT)</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input fee-checkbox" type="checkbox"
                                                               data-amount="@item.TestFee" value="Test" />
                                                        <label class="form-check-label">Test Fee (@item.TestFee BDT)</label>
                                                    </div>
                                                </div>

                                                <input type="hidden" id="PaymentType-@item.BookingId" />
                                                <input type="hidden" id="PaymentAmount-@item.BookingId" />
                                            </div>

                                            <div class="mb-3">
                                                <span><b>Total: <span id="total-@item.BookingId">0</span> BDT</b></span>
                                            </div>

                                            <!-- Payment Forms -->
                                            @foreach (var method in new[] { "bkash", "nagad", "rocket" })
                                            {
                                                <div id="@method-@item.BookingId" class="payment-form d-none">
                                                    <h6>@method.ToUpper() Payment</h6>
                                                    <input type="hidden" name="BookingId" value="@item.BookingId" />
                                                    <input type="hidden" name="Method" value="@method" />
                                                    <div class="mb-3">
                                                        <label class="form-label">Account Number</label>
                                                        <input type="text" name="AccountNumber" class="form-control" />
                                                    </div>
                                                    <button type="button" class="btn btn-primary pay-now-btn">Pay Now</button>
                                                </div>
                                            }

                                            <!-- Card Payment -->
                                            <div id="card-@item.BookingId" class="payment-form d-none">
                                                <h6 class="text-info">Card Payment</h6>
                                                <div class="mb-3">
                                                    <label class="form-label">Card Number</label>
                                                    <input type="text" class="form-control" />
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Expiry Date</label>
                                                    <input type="month" class="form-control" />
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">CVV</label>
                                                    <input type="text" class="form-control" />
                                                </div>
                                                <button type="button" class="btn btn-info pay-now-btn">Pay Now</button>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <small class="text-danger me-auto">Please make the payment within 24 hours</small>
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        @* ---- Other Statuses ---- *@
                        else if (item.ApprovalStatus == "Rejected")
                        {
                            <form asp-action="CancelBooking" method="post" onsubmit="return confirm('Cancel this booking?');">
                                <input type="hidden" name="bookingId" value="@item.BookingId" />
                                <button type="submit" class="btn btn-danger btn-sm">Cancel Booking</button>
                            </form>
                        }
                        else if (item.PaymentStatus == "Paid" && item.ApprovalStatus == "Pending")
                        {
                            <span class="badge bg-success">Payment Done — Waiting for Admin Approval</span>
                        }
                        else if (item.ApprovalStatus == "Approved")
                        {
                            <div class="alert alert-success mt-2 text-center">
                                🎉 Your booking is approved!
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning text-center">
        No booking history found.
    </div>
}

<!-- Bootstrap & jQuery -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

<script>
    $(document).ready(function () {
        // Show selected payment form
        window.showForm = function (type, bookingId) {
            $(`#paymentModal-${bookingId} .payment-form`).addClass('d-none');
            $(`#${type}-${bookingId}`).removeClass('d-none');
        };

        // Reset modal on close
        $('.modal').on('hidden.bs.modal', function () {
            $(this).find('.payment-form').addClass('d-none');
            $(this).find('input').val('');
        });

        // Calculate total
        $(document).on("change", ".fee-checkbox", function () {
            const bookingId = $(this).closest(".modal").attr("id").split('-')[1];
            let totalAmount = 0, selectedTypes = [];

            $(`#paymentModal-${bookingId} .fee-checkbox:checked`).each(function () {
                totalAmount += parseFloat($(this).data("amount"));
                selectedTypes.push($(this).val());
            });

            $(`#total-${bookingId}`).text(totalAmount);
            $(`#PaymentAmount-${bookingId}`).val(totalAmount);
            $(`#PaymentType-${bookingId}`).val(selectedTypes.join("+"));
        });

        // Pay Now AJAX
        $(document).on('click', '.pay-now-btn', function () {
            const $form = $(this).closest('.payment-form');
            const bookingId = $form.find('input[name="BookingId"]').val();
            const paymentMethod = $form.find('input[name="Method"]').val();
            const accountNumber = $form.find('input[name="AccountNumber"]').val()?.trim();
            let amounts = [];

            $(`#paymentModal-${bookingId} .fee-checkbox:checked`).each(function () {
                amounts.push({
                    reason: $(this).val(),
                    amount: parseFloat($(this).data('amount'))
                });
            });

            if (!bookingId || !paymentMethod || !accountNumber) {
                alert('Please fill all required fields!');
                return;
            }

            const data = {
                BookingId: bookingId,
                PaymentMethod: paymentMethod,
                AccountNumber: accountNumber,
                PaymentAmount: amounts.reduce((sum, a) => sum + a.amount, 0),
                TestFee: amounts.find(s => s.reason === 'Test')?.amount || 0,
                VisitFee: amounts.find(s => s.reason === 'Visit')?.amount || 0
            };

            $.ajax({
                url: '/User/BookAppointment/ProcessPayment',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (response) {
                    if (response.success) {
                        alert('Payment Successful!');
                        window.location.reload();
                    } else {
                        alert('Payment Failed: ' + response.message);
                    }
                },
                error: function (xhr) {
                    alert('Something went wrong! ' + (xhr.responseText || ''));
                }
            });
        });
    });
</script>
