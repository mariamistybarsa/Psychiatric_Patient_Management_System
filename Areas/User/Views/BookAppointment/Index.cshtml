@model List<Psychiatrist_Management_System.Models.BookingHistoryVM>

<h3 class="mb-4">Booking History</h3>
<form method="get" asp-controller="PatientList" asp-action="Search" class="d-flex mb-3">
    <input type="text" name="UserName" class="form-control me-2" placeholder="Search by ID, Name, or Email" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>
@if (TempData["Message"] != null)
{
    <div class="alert alert-info text-center">
        @TempData["Message"]
    </div>
}

@if (Model != null && Model.Count > 0)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-3">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        Booking #: @item.BookingId
                    </div>
                    <div class="card-body">
                        <p><strong>Psychiatrist:</strong> @item.PsychiatristName</p>
                        <p><strong>Patient:</strong> @item.PatientName</p>
                        <p><strong>Date:</strong> @item.AppointmentDate.ToString("dd-MM-yyyy")</p>
                        <p><strong>Time:</strong> @item.AppointmentTime</p>
                        <p><strong>Day:</strong> @item.AppointmentDay</p>
                        <p><strong>Notes:</strong> @item.Notes</p>
                        <p>
                            <strong>Approval Status:</strong>
                            <span class="badge @(item.ApprovalStatus == "Pending" ? "bg-warning text-dark" :
                                                                                    item.ApprovalStatus == "Rejected" ? "bg-danger" :
                                                                                    "bg-success")">
                        @item.ApprovalStatus
                    </span>
                </p>
                <p>
                    <strong>Payment Status:</strong>
                    <span class="badge @(item.PaymentStatus == "Paid" ? "bg-success" : "bg-secondary")">
                        @item.PaymentStatus
                    </span>
                </p>

                        @* Buttons based on status *@
                @if (item.ApprovalStatus == "Pending" || item.ApprovalStatus == "Rejected")
                        {
                            <form asp-action="CancelBooking" method="post" onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="bookingId" value="@item.BookingId" />
                                <button type="submit" class="btn btn-danger btn-sm">Cancel Booking</button>
                            </form>
                        }
                        else if (item.ApprovalStatus == "Approved" && item.PaymentStatus == "NotPaid")
                        {
                            <form asp-action="PayBooking" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="bookingId" value="@item.BookingId" />
                                <button type="submit" class="btn btn-success btn-sm">Pay Now</button>
                            </form>
                            <small class="text-danger">Please make the payment within 24 hours</small>
                        }
                        <!-- Pay Now button triggers the modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#paymentModal">
                            Pay Now
                        </button>



                        <!-- Modal -->
                        <div class="modal fade" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="paymentModalLabel">Payment</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <!-- Payment Options -->
                                        <div class="mb-3">
                                            <label class="form-label">Choose Payment Method:</label>
                                            <div class="d-flex gap-2 flex-wrap">
                                                <button type="button" class="btn btn-outline-primary">Bkash</button>
                                                <button type="button" class="btn btn-outline-success">Nagad</button>
                                                <button type="button" class="btn btn-outline-info">PayPal</button>
                                                <button type="button" class="btn btn-outline-warning">Rocket</button>
                                            </div>
                                        </div>

                                        <!-- Payment form -->
                                        <form>
                                            <div class="mb-3">
                                                <label for="cardNumber" class="form-label">Card Number</label>
                                                <input type="text" class="form-control" id="cardNumber" placeholder="1234 5678 9012 3456">
                                            </div>
                                            <div class="mb-3">
                                                <label for="expiry" class="form-label">Expiry Date</label>
                                                <input type="month" class="form-control" id="expiry" placeholder="MM/YY">
                                            </div>
                                            <div class="mb-3">
                                                <label for="cvv" class="form-label">CVV</label>
                                                <input type="text" class="form-control" id="cvv" placeholder="123">
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Pay Now</button>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning text-center">
        No booking history found.
    </div>
}


<!-- Make sure to include Bootstrap CSS & JS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>