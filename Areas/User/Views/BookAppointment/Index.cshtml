@model List<Psychiatrist_Management_System.Models.BookingHistoryVM>
@using Psychiatrist_Management_System.Models

<h3 class="mb-4">Booking History</h3>

<!-- Modern Search Bar -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="searchForm" class="input-group shadow-sm rounded-pill overflow-hidden">
                <input type="text" id="searchInput" class="form-control border-0" placeholder="Search by ID, Name, or Email">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    </div>
</div>

<style>
    .input-group {
        transition: all 0.3s ease;
    }

        .input-group:hover {
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

    .form-control:focus {
        box-shadow: none;
        outline: none;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info text-center">@TempData["Message"]</div>
}

<div id="bookingContainer">
    @if (Model != null && Model.Count > 0)
    {
        <div class="row" id="bookingList">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-3 booking-card">
                    <div class="card shadow-sm">
                        <div class="card-header bg-info text-white">
                            BookingSerial: @item.BookingSerial
                        </div>
                        <div class="card-body">
                            <p><strong>Psychiatrist:</strong> @item.PsychiatristName</p>
                            <p><strong>Patient:</strong> @item.PatientName</p>
                            <div class="d-flex">
                                <p class="mb-0" style="width: 120px;"><strong>Date:</strong> @item.AppointmentDate.ToString("dd-MM-yyyy")</p>
                                <p class="mb-0" style="width: 100px;"><strong>Time:</strong> @item.AppointmentTime</p>
                                <p class="mb-0" style="width: 130px;"><strong>Day:</strong> @item.AppointmentDay</p>
                            </div>

                            <p>
                                <strong>Approval Status:</strong>
                                <span class="badge @(item.ApprovalStatus == "Pending" ? "bg-warning text-dark" :
                                                                                                item.ApprovalStatus == "Rejected" ? "bg-danger" : "bg-success")">
                            @item.ApprovalStatus
                        </span>
                    </p>

                            @* Payment & Booking Buttons *@
                    @if (item.PaymentStatus == "Paid")
                            {
                                <div class="d-flex justify-content-between align-items-center flex-wrap" style="min-height: 50px;">
                                    <a asp-controller="BookAppointment" asp-action="InvoicePayment" asp-route-bookingId="@item.BookingId"
                                       class="btn btn-info btn-sm">
                                        View Invoice
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            No booking history found.
        </div>
    }
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {

        // Prevent default form submit
        $('#searchForm').submit(function (e) {
            e.preventDefault();
            const query = $('#searchInput').val().trim().toLowerCase();

            // Loop through booking cards and hide those not matching
            $('.booking-card').each(function () {
                const psychiatrist = $(this).find('p strong:contains("Psychiatrist")').parent().text().toLowerCase();
                const patient = $(this).find('p strong:contains("Patient")').parent().text().toLowerCase();
                const serial = $(this).find('.card-header').text().toLowerCase();

                if (psychiatrist.includes(query) || patient.includes(query) || serial.includes(query)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });

            // Show message if no match
            if ($('.booking-card:visible').length === 0) {
                if ($('#noResult').length === 0) {
                    $('#bookingList').append('<div id="noResult" class="alert alert-warning text-center w-100 mt-3">No matching booking found.</div>');
                }
            } else {
                $('#noResult').remove();
            }
        });

    });
</script>
