@model IEnumerable<Psychiatrist_Management_System.Models.UserVM>

@{
    ViewData["Title"] = "Patient Information";
}

<style>
    body {
        font-family: Arial, sans-serif;
    }

    #patienttable {
        width: 100%;
        border-collapse: collapse;
        margin: 20px auto;
    }

        #patienttable th, #patienttable td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
        }

    .header {
        background-color: #8B0000;
        color: white;
        font-weight: bold;
        font-size: 18px;
        text-align: left;
        padding: 10px;
        margin: 0 auto 5px auto;
        width: 100%;
    }

    .sub-header {
        background-color: #d46a6a;
        font-weight: bold;
        color: white;
        text-align: center;
    }

    .date {
        float: right;
        font-weight: normal;
    }
</style>

<br />
<br />

<h2 class="header">Patient Information</h2>

<table id="patienttable">
    <thead class="sub-header">
        <tr>
            <th>User ID</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Designation</th>
            <th>Age</th>
            <th>Address</th>
            <th>Blood Group</th>
            <th>Action</th>
            <th>Status</th>
            <th>Appointment Details</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.DesignationName</td>
                    <td>@user.Age</td>
                    <td>@user.Address</td>
                    <td>@user.BloodGroup</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-controller="PatientList" asp-action="Edit" asp-route-id="@user.UserId" onclick="return confirm('Are you sure you want to Edit this?');">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.UserId" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
                        @if (user.Status == "Pending")
                        {
                            <a class="btn btn-sm btn-success" asp-action="Approve" asp-route-id="@user.UserId" onclick="return confirm('Are you sure you want to approve this?');">Approve</a>
                        }
                    </td>
                    <td>
                        @if (user.Status == "Pending")
                        {
                            <span class="badge bg-warning">Pending</span>
                        }
                        else if (user.Status == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else if (user.Status == "Rejected")
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Unknown</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-info"
                           asp-controller="BookAppointmentPatients"
                           asp-action="AppointmentDetails"
                           asp-route-userId="@user.UserId">
                            Details
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="11" class="text-center">No data available</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#patienttable').DataTable();
        });
    </script>
}
