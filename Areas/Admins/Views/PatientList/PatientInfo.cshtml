@model IEnumerable<Psychiatrist_Management_System.Models.User>

@{
    ViewData["Title"] = "Patient Information";
}

<h2>Patient Information</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>User ID</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Phone Number</th>
        
            <th>Designation ID</th>
            <th>Age</th>
            <th>Address</th>
            <th>Blood Group</th>
            <td>Action</td>
            <td>Status</td>
            <td>User-request</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                @* <td>@user.UsertypeId</td> *@
                <td>@user.DesignationId</td>
                <td>@user.Age</td>
                <td>@user.Address</td>
                <td>@user.BloodGroup</td>
               
                <td>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", "PatientList", new { area = "Admins", id = user.UserId })">Edit</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "PatientList", new { area = "Admins", id = user.UserId })"
                       onclick="return confirm('Are you sure you want to delete this user?');">
                        Delete
                    </a>
                </td>
                
                <td id="status-@user.UserId">
                    @if (user.Status == "Pending")
                    {
                        <button class="btn btn-warning approve-btn" data-id="@user.UserId">Approve</button>
                    }
                    else if (user.Status == "Approved")
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else if (user.Status == "Rejected")
                    {
                        <span class="badge bg-danger">Rejected</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Unknown</span>
                    }
                </td>
                <td id="status-@user.UserId">@user.Status</td>
            </tr>
        }
        
        else
        {
        <tr>
            <td colspan="10" class="text-center">No data available</td>
        </tr>
        }
    </tbody>
</table>