@model IEnumerable<Psychiatrist_Management_System.Models.User>

@{
    ViewData["Title"] = "Patient Information";
}

<h2>Patient Information</h2>

<table id="patientTable" class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>User ID</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Designation ID</th>
            <th>Age</th>
            <th>Address</th>
            <th>Blood Group</th>
            <th>Action</th>
            <th>Status</th>
            <th>User-request</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.DesignationId</td>
                    <td>@user.Age</td>
                    <td>@user.Address</td>
                    <td>@user.BloodGroup</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-controller="PatientList" asp-action="Edit" asp-route-id="@user.UserId" onclick="return confirm('Are you sure you want to Edit this?');">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.UserId" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>

                        
                    </td>
                    <td id="status-@user.UserId">
                        @if (user.Status == "Pending")
                        {
                            <button class="btn btn-warning approve-btn" data-id="@user.UserId">Approve</button>
                        }
                        else if (user.Status == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else if (user.Status == "Rejected")
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Unknown</span>
                        }
                    </td>
                    <td>@user.Status</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="11" class="text-center">No data available</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#patientTable').DataTable();
        });
    </script>
}
