@model IEnumerable<Psychiatrist_Management_System.Models.UserVM>

@{
    ViewData["Title"] = "Patient Information";
}
<br />
<br/>
<form method="get" asp-controller="PatientList" asp-action="Search" class="d-flex mb-3">
    <input type="text" name="UserName" class="form-control me-2" placeholder="Search by ID, Name, or Email" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>



<h2>Patient Information</h2>

<table  class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>User ID</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Designation</th>
            <th>Age</th>
            <th>Address</th>
            <th>Blood Group</th>
            <th>Action</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.DesignationName</td>
                    <td>@user.Age</td>
                    <td>@user.Address</td>
                    <td>@user.BloodGroup</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-controller="PatientList" asp-action="Edit" asp-route-id="@user.UserId" onclick="return confirm('Are you sure you want to Edit this?');">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.UserId" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
                        @if (user.Status == "Pending")
                        {
                            <a class="btn btn-sm btn-success" asp-action="Approve" asp-route-id="@user.UserId" onclick="return confirm('Are you sure you want to approve this?');">Approve</a>
                        }
                    </td>
                    <td>
                        @if (user.Status == "Pending")
                        {
                            <span class="badge bg-warning">Pending</span>
                        }
                        else if (user.Status == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else if (user.Status == "Rejected")
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Unknown</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="text-center">No data available</td>
            </tr>
        }
    </tbody>
</table>



