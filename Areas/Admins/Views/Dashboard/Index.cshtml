@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5">Welcome, @User.Identity.Name 👋</h1>
            <p class="text-muted">Here’s an overview of your system today.</p>
        </div>
    </div>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<div class="container py-4">

    <!-- Page Title -->
    <div class="mb-4 text-center">
        <h2 class="fw-bold">Admin Dashboard</h2>
        <p class="text-muted mb-0">Manage psychiatrists, patients, appointments, payments & more</p>
    </div>

    <!-- Custom Colors for Cards -->
    <style>
        .card-orange {
            background: #ff9800;
            color: white;
        }
        .card-green {
            background: #4caf50;
            color: white;
        }
        .card-pink {
            background: #e91e63;
            color: white;
        }
        .card-yellow {
            background: #ffc107;
            color: black;
        }
        .card-white {
            background: #ffffff;
            border: 1px solid #ddd;
            color: #333;
        }

        .card .btn {
            border-radius: 20px;
            font-weight: bold;
        }
    </style>

    <!-- Top Action Cards -->
    <div class="row g-3 mb-4">

        <!-- Psychiatrist Record -->
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100 card-orange">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">Psychiatrist Records</h5>
                        <p class="card-text">View and manage psychiatrist records</p>
                    </div>
                    <a asp-area="Admins" asp-controller="PsychiatristRecord" asp-action="Record" class="btn btn-light btn-sm mt-auto">
                        <i class="fas fa-user-md"></i> View Records
                    </a>
                </div>
            </div>
        </div>

        <!-- Manage User Type -->
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100 card-green">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">User Types</h5>
                        <p class="card-text">Manage different types of users</p>
                    </div>
                    <a asp-area="Admins" asp-controller="ManageUser" asp-action="Index" class="btn btn-light btn-sm mt-auto">
                        <i class="fas fa-users-cog"></i> Manage Users
                    </a>
                </div>
            </div>
        </div>

        <!-- Manage Designation -->
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100 card-pink">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">Designations</h5>
                        <p class="card-text">Manage psychiatrist designations</p>
                    </div>
                    <a asp-area="Admins" asp-controller="Designation" asp-action="Index" class="btn btn-light btn-sm mt-auto">
                        <i class="fas fa-briefcase"></i> Manage Designations
                    </a>
                </div>
            </div>
        </div>

        <!-- Manage Psychiatrist -->
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100 card-yellow">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">Psychiatrists</h5>
                        <p class="card-text">View and manage psychiatrists</p>
                    </div>
                    <a asp-area="Admins" asp-controller="PatientList" asp-action="Psychiatrist" class="btn btn-dark btn-sm mt-auto">
                        <i class="fas fa-user-md"></i> Manage Psychiatrists
                    </a>
                </div>
            </div>
        </div>

        <!-- Manage Patients -->
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100 card-white">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">Patients</h5>
                        <p class="card-text">View and manage patient details</p>
                    </div>
                    <a asp-area="Admins" asp-controller="PatientList" asp-action="PatientInfo" class="btn btn-primary btn-sm mt-auto">
                        <i class="fas fa-user-injured"></i> Manage Patients
                    </a>
                </div>
            </div>
        </div>

        <!-- Appointment Patients -->
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100 card-orange">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">Appointment Patients</h5>
                        <p class="card-text">View patients with booked appointments</p>
                    </div>
                    <a asp-area="Admins" asp-controller="BookAppointmentPatients" asp-action="AppointmentPatientLists" class="btn btn-light btn-sm mt-auto">
                        <i class="fas fa-calendar-check"></i> Appointment List
                    </a>
                </div>
            </div>
        </div>

        <!-- Payment History -->
        <div class="col-md-3">
            <div class="card text-center shadow-sm h-100 card-green">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title">Payment History</h5>
                        <p class="card-text">Track all payment transactions</p>
                    </div>
                    <a asp-area="Admins" asp-controller="PaymentHistory" asp-action="Index" class="btn btn-light btn-sm mt-auto">
                        <i class="fas fa-file-invoice-dollar"></i> View History
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
