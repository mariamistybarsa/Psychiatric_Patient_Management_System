@model IEnumerable<Psychiatrist_Management_System.Models.GetMonthlySummary>

@{
    ViewBag.Title = "Psychiatrist Monthly Summary";
}

<h3 class="text-center mb-4">Monthly Booking Summary</h3>

<div class="table-responsive">
    <table class="table table-bordered table-striped text-center">
        <thead>
            <tr>
                <th>No</th>
                <th>Month</th>
                <th>Psychiatrist</th>
                <th>Pending</th>
                <th>Running</th>
                <th>Completed</th>
                <th>Total Users</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int count = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(item.Month) @item.Year</td>
                        <td>@item.PsychiatristName</td>
                        <td>@item.Pending</td>
                        <td>@item.Running</td>
                        <td>@item.Completed</td>
                        <td>@item.TotalUsers</td>
                    </tr>
                    count++;
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No data found</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-3 text-center">
    <button class="btn btn-primary btn-sm" onclick="location.reload()">Refresh</button>
</div>
