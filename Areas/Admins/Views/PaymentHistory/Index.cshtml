@model IEnumerable<Psychiatrist_Management_System.Models.PaymentVM>

@{
    ViewData["Title"] = "Payment History";
}

<div class="header">
    Payment History
    <span class="date">@DateTime.Now.ToString("dd MMM yyyy")</span>
</div>

<!-- Date Range Filter -->
<form method="get" asp-action="Index" class="row g-2 mb-3" style="margin:0 20px;">
    <div class="col-md-3">
        <label class="form-label">Start Date</label>
        <input type="date" class="form-control" name="startDate"
               value="@(ViewBag.StartDate != null ? ((DateTime)ViewBag.StartDate).ToString("yyyy-MM-dd") : "")" />
    </div>
    <div class="col-md-3">
        <label class="form-label">End Date</label>
        <input type="date" class="form-control" name="endDate"
               min="@(ViewBag.StartDate != null ? ((DateTime)ViewBag.StartDate).ToString("yyyy-MM-dd") : "")"
               value="@(ViewBag.EndDate != null ? ((DateTime)ViewBag.EndDate).ToString("yyyy-MM-dd") : "")" />
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-dark w-100">Search</button>
    </div>
</form>



<!-- Table -->
<table id="patienttable" class="display nowrap" style="width:100%">
    <thead>
        <tr class="sub-header">
            
            <th>User Name</th>
            <th>Booking Serial</th>
            <th>Psychiatrist Name</th>
            <th>Appointment Date</th>
            <th>Refund Amount</th>
            <th>Payment Amount</th>
            <th>Test Fee</th>
            <th>Visit Fee</th>
            <th>Payment Method</th>
            <th>Paid Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
           
                <td>@item.UserName</td>
                <td>@item.BookingSerial</td>
                <td>@item.PsychiatristName</td>
                <td>@item.AppointmentDate.ToString("dd-MMM-yyyy")</td>
                <td>@item.RefundAmount</td>
                <td>@item.PaymentAmount</td>
                <td>@item.TestFee</td>
                <td>@item.VisitFee</td>
                <td>@item.PaymentMethod</td>
                <td>@item.CreatedDate</td>
            </tr>
        }
    </tbody>
</table>
<!-- Download Button -->
<div style="margin:10px 20px;">
    <button id="downloadPdf" class="btn btn-danger">Download PDF</button>
</div>


@section Scripts {
    <!-- jQuery & DataTables -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

    <!-- jsPDF & autoTable -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.28/jspdf.plugin.autotable.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTable
            $('#patienttable').DataTable({
                responsive: true,
                paging: true,
                searching: true,
                ordering: true
            });

            // PDF Download
            document.getElementById("downloadPdf").addEventListener("click", function () {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF();

                // Title
                doc.setFontSize(14);
                doc.text("Payment History Report", 14, 15);
                doc.setFontSize(10);
                doc.text("Generated on: " + new Date().toLocaleDateString(), 14, 22);

                // Export DataTable to PDF
                doc.autoTable({
                    html: '#patienttable',
                    startY: 30,
                    theme: 'grid',
                    styles: { fontSize: 8 }
                });

                // Save PDF
                doc.save("PaymentHistory.pdf");
            });
        });
    </script>
}













































