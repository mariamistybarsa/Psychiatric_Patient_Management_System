@model List<Psychiatrist_Management_System.Models.PsychiatristVM>

@{
    ViewData["Title"] = "Psychia List";
}

<h2>@ViewData["Title"]</h2>

<div>
    <a class="btn btn-primary" asp-controller="Psychiatrist" asp-action="Form">Add</a>
</div>

<table id="patientTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Specialization</th>
            <th>Actions</th> 
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@item.name</td>
                    <td>@item.email</td>
                    <td>@item.specialization</td>
                    <td>
                        <!-- 🔹 Action buttons -->
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.id">Details</a>
                        <a class="btn btn-sm btn-warning" asp-controller="Psychiatrist" asp-action="Edit" asp-route-id="@item.id" onclick="return confirm('Are you sure you want to Edit this?');">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.id" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No records found.</td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#patientTable').DataTable();
        });
    </script>
}