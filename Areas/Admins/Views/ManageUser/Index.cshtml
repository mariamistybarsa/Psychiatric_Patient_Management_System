<h1>this is usermanagement</h1>
@model List<Psychiatrist_Management_System.Models.UserType>

@{
    ViewData["Title"] = "";
}

<h2>@ViewData["Title"]</h2>

<div>
    <a class="btn btn-primary" asp-controller="ManageUser" asp-action="Form">Add</a>
</div>
<table id="ManageuserTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>User-Type</th>
            <th>User-Type-Name</th>
            
          
            <th>Actions</th> <!-- 🔹 New column -->
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@item.UserTypeId</td>
                    <td>@item.UserTypeName</td>
                 
                    <td>
                        <!-- 🔹 Action buttons -->
                        <a class="btn btn-sm btn-info" asp-action="GetById" asp-route-id="@item.UserTypeId">Details</a>
                        <a class="btn btn-sm btn-warning" asp-controller="ManageUser" asp-action="Edit" asp-route-id="@item.UserTypeId" onclick="return confirm('Are you sure you want to Edit this?');">Edit</a>


                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.UserTypeId" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No records found.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ManageuserTable').DataTable();
        });
    </script>
}

