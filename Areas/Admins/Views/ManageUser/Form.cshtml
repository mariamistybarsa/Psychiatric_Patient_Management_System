@model Psychiatrist_Management_System.Models.UserType

@{
    ViewData["Title"] = "Manage User Type";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Card -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body bg-light p-4">

                    <form id="userTypeForm" asp-action="Save" method="post">
                        <input type="hidden" asp-for="UserTypeId" />
                        <div class="mb-4">
                            <label asp-for="UserTypeName" class="form-label fw-semibold">   
                                User Type Name
                            </label>
                            <input id="UserTypeName" type="text" asp-for="UserTypeName" class="form-select form-select-lg border-primary shadow-sm" required />
                            <span asp-validation-for="UserTypeName" class="text-danger small"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4" id="submitBtn">
                                <i class="bi bi-save"></i> Save
                            </button>
                        </div>

                    </form>

                    <div id="resultMessage" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#userTypeForm').submit(function (e) {
            e.preventDefault(); // prevent page reload

            const UserTypeName = $('#UserTypeName').val().trim();
            const UserTypeId = $('#UserTypeId').val().trim();

            // Basic form validation
            if (!UserTypeName) {
                $('#resultMessage').text('Please fill out the User Type Name.').css('color', 'red');
                return;
            }

            // Prepare data object
            const User = {
                UserTypeName: UserTypeName,
                UserTypeId:UserTypeId
            };

            $.ajax({
                url: '/Admins/ManageUser/Save',
                type: 'POST',
                data: User,
                success: function (response) {
                    if (response.success) {
                        $('#resultMessage').css('color', 'green').text(response.message || 'User Type added successfully!');

                        // Optionally clear the form
                        $('#userTypeForm')[0].reset();

                      
                        setTimeout(function () {
                           window.location.href = '/Admins/ManageUser/Index';
                        }, 2000);
                    } else {
                        $('#resultMessage').css('color', 'red').text(response.message || 'Error: Unexpected response.');
                    }
                },
                error: function (xhr) {
                    $('#resultMessage').css('color', 'red').text('Error: ' + (xhr.responseText || 'Unknown error'));
                }
            });
        });
    });
</script>
